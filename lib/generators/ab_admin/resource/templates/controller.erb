class Admin::<%= controller_class_name %>Controller < Admin::BaseController
<% if model.respond_to?(:acts_as_nested_set_options) -%>
  include TheSortableTreeController::ReversedRebuild

<% end -%>
  load_and_authorize_resource

<% if model.respond_to?(:visible) -%>
  has_scope :visible
<% end -%>
<% if model.respond_to?(:un_visible) -%>
  has_scope :un_visible
<% end -%>

<% if model.respond_to?(:acts_as_nested_set_options) -%>
  protected

  def build_settings
    super.merge!(index_view: 'tree')
  end
<% end -%>
end
